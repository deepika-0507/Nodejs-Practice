{
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "Input.Text",
        "id": "name",
        "value": "Signup"
      },

      {
        "type": "Input.Text",
        "id": "email",
        "placeholder": "Enter your email id"
      },
      {
        "type": "Input.Text",
        "id": "password",
        "placeholder": "Enter your password"
      },
      {
        "type": "Input.Text",
        "id": "confirm_password",
        "placeholder": "confirm your password"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Submit"
      }
    ]
  }